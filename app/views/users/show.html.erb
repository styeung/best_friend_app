<ul>
	<img src="<%= @user.profile_photo.url(:small) %>">
	<li><p>Username: <%= @user.username %></p></li>
	<li><p>Email: <%= @user.email %></p></li>
</ul>

<h2>Saved Users</h2>
<ul>
<% @user.saved_users.each do |user| %>
	<li><a href="<%= user_url(user) %>"><%= user.username %></a></li>
<% end %>
</ul>

<h2>Ignored Users</h2>
<ul>
<% @user.ignored_users.each do |user| %>
	<li><a href="<%= user_url(user) %>"><%= user.username %></a></li>
<% end %>
</ul>

<h2>Conversations</h2>
<ul>
	<% @user.conversations.each do |conversation| %>
		<li>
			<% conversation.messages.each do |message| %>
				<ul>
					<li><%= message.author.username %>: <%= message.contents %></li>
				</ul>
			<% end %>
		</li>
	<% end %>
</ul>

<a href="<%= edit_user_url %>">Edit Profile</a>